<div class="faq-section bg-gray-100 p-6 rounded-lg">
  <h2 class="text-2xl font-bold text-gray-800 mb-4">{{ section.settings.faq_heading }}</h2>
  <p class="text-gray-600 mb-6">{{ section.settings.faq_description }}</p>
  <div class="faq-items space-y-4">
    {% for block in section.blocks %}
      <div class="faq-item border-b border-gray-300 pb-4">
        <h3 class="text-lg font-semibold text-gray-700">{{ block.settings.question }}</h3>
        <p class="text-gray-600 mt-2">{{ block.settings.answer }}</p>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "text",
      "id": "faq_heading",
      "label": "FAQ Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "textarea",
      "id": "faq_description",
      "label": "Section Description",
      "default": "Find answers to your most common questions here."
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is your return policy?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "We accept returns within 30 days of purchase."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
