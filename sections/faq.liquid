<div class=" p-10 rounded-lg  ">
  <h2 class="text-5xl font-semibold text-green-400 text-center mb-4">{{ section.settings.faq_heading }}</h2>
  <p class="text-gray-600 mb-6 text-center">{{ section.settings.faq_description }}</p>
  <div class="space-y-4 border border-red-400 ">
    {% for block in section.blocks %}
      <div class=" border-b border-gray-300 p-4">
        <!-- Accordion Item -->
        <div x-data="{ open: false }" class="">
          <h3
            @click="open = !open"
            class="text-lg font-semibold text-gray-700 cursor-pointer transition-all ease-in-out duration-300"
          >
            <span :class="open ? 'text-blue-600' : 'text-gray-700'">{{ block.settings.question }}</span>
            <svg
              :class="open ? 'rotate-180' : 'rotate-0'"
              class="w-5 h-5 inline-block ml-2 transition-all ease-in-out duration-300"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </h3>
          <div x-show="open" x-transition class="text-gray-600 mt-2">
            <p>{{ block.settings.answer }}</p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "text",
      "id": "faq_heading",
      "label": "FAQ Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "textarea",
      "id": "faq_description",
      "label": "Section Description",
      "default": "Find answers to your most common questions here."
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is your return policy?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer",
          "default": "We accept returns within 30 days of purchase."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ Section"
    }
  ]
}
{% endschema %}
