<style>
  .collection-tabs-CM-{{ section.id }} {
    padding-top: 30px; 
    padding-bottom: 30px; 
  }

   .collection-tabs-CM-{{ section.id }} ul {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      justify-content: flex-start;
      @media (max-width: 767px){
        flex-wrap: nowrap;
        overflow-x: scroll;
        overflow-y: hidden;
        }
      }


    .collection-tabs-CM-{{ section.id }} ul, .collection-tabs-CM-{{ section.id }} li {
      padding: 0;
    }
    .collection-tabs-CM-{{ section.id }} li {
      list-style: none;
      border: 1px solid #808080;
      border-radius: 10px;
      padding: 1rem 1.2rem;
      @media (max-width: 767px) {
        margin-bottom: 20px;
      }
    }
  .collection-tabs-CM-{{ section.id }} a {
    display: flex;
    align-items: center;
    gap: 7px;
    text-decoration: none;
    color: #212121;
    font-size: 2rem;
    @media (max-width: 767px){
      width: max-content;
      font-size: 1rem;
    }
  }

  .collection-tabs-CM-{{ section.id }} img {
    width: 24px;
    height: auto;
    object-fit: cover;
    @media (max-width: 767px){
      width: 20px;
    }
  }
</style>

<div class="page-width collection-tabs-CM-{{ section.id }}">
  <ul>
    {% for collection in collections %}
      <li>
        <a href="{{ collection.url }}">
          {{ collection.image.src | image_url: 'master' | img_tag }}
          {{ collection.title }}
        </a>
      </li>
    {% endfor %}
  </ul>
</div>

{% schema %}
{
  "name": "CM Collection Tabs",
  "settings": [],
  "presets": [
    {
      "name": "CM Tabs Section"
    }
  ]
}
{% endschema %}
